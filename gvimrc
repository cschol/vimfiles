" Color and font settings
set background=dark
colorscheme solarized
set guifont=Ubuntu\ Mono\ 11

" Hide toolbar and menus
set guioptions-=T
set guioptions-=m

" Scrollbar is always off
set guioptions-=rL

" Don't blink cursor.
set guicursor=a:blinkon0

" Disable visual bell (separately disabled for gvim)
set vb t_vb=
